<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginVertical="2dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="8dp"
    android:background="@drawable/default_background"
    android:gravity="center"
    android:elevation="1dp">

    <TextView
        android:id="@+id/tvServiceName"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Service Name"
        android:textSize="15sp"
        android:padding="8dp"
        android:textColor="@color/secondaryFont"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@drawable/prices_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvSedan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sedan"
                android:textSize="10sp"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/white"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvSedanPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvSedan"
                android:text="₱ 0.00"
                android:textSize="10sp"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:gravity="right"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvSuv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUV"
                android:textSize="10sp"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/white"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvSuvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvSedan"
                android:text="₱ 0.00"
                android:textSize="10sp"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:gravity="right"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvPickup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick Up"
                android:textSize="10sp"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/white"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvPickupPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvSedan"
                android:text="₱ 0.00"
                android:textSize="10sp"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:gravity="right"/>
        </LinearLayout>




    </LinearLayout>



</LinearLayout>
