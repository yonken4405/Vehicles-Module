<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defaultBackground">

    <!-- Relative Layout for the Header -->
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:background="@color/white"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/back_icon" />

        <TextView
            android:id="@+id/tvPageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:alpha=".8"
            android:fontFamily="@font/inter_semibold"
            android:text="Choose Services"
            android:textColor="@color/normalFont"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/btnAdd"
            android:layout_width="30dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/add_icon" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/progressBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="-9dp"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

        <View
            android:id="@+id/line1"
            android:layout_width="40dp"
            android:layout_height="3dp"
            android:background="#D9D9D9"
            android:layout_weight="1"/>

        <View
            android:id="@+id/circle1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/circle_gray" />

        <View
            android:id="@+id/line2"
            android:layout_width="40dp"
            android:layout_height="3dp"
            android:background="#D9D9D9"
            android:layout_weight="2"/>

        <View
            android:id="@+id/circle2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/circle_gray" />

        <View
            android:id="@+id/line3"
            android:layout_width="40dp"
            android:layout_height="3dp"
            android:background="#D9D9D9"
            android:layout_weight="2"/>

        <View
            android:id="@+id/circle3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/circle_gray" />

        <View
            android:id="@+id/line4"
            android:layout_width="40dp"
            android:layout_height="3dp"
            android:background="#D9D9D9"
            android:layout_weight="1"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/receiptLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/defaultBackground"
            android:paddingVertical="16dp"
            android:orientation="vertical">

        <!-- Choose Service Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="8dp">
                <TextView
                    android:id="@+id/tvChooseService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose Service "
                    android:fontFamily="@font/inter_semibold"
                    android:textColor="@color/blackHeader"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(Choose 1)"
                    android:textColor="@color/grayHeader"
                    android:fontFamily="@font/inter_semibold"
                    android:textSize="14sp" />

            </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvServiceOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:paddingHorizontal="18dp"
            tools:listitem="@layout/item_service"/>

        <!-- Add-ons Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="8dp">
                <TextView
                    android:id="@+id/tvAddOns"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add ons "
                    android:fontFamily="@font/inter_semibold"
                    android:textColor="@color/blackHeader"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(Optional)"
                    android:textColor="@color/grayHeader"
                    android:fontFamily="@font/inter_semibold"
                    android:textSize="14sp" />

            </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAddOns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:paddingHorizontal="18dp"
            tools:listitem="@layout/item_add_on"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="20dp">

                <!-- Select Time Section -->
                <TextView
                    android:id="@+id/tvSelectTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date and Time"
                    android:fontFamily="@font/inter_semibold"
                    android:textColor="@color/blackHeader"
                    android:textSize="18sp"
                    android:layout_weight="1"
                   />

                <Button
                    android:id="@+id/btnSelectDate"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/inter_semibold"
                    android:text="Choose Date"
                    android:textColor="@color/grayHeader"
                    android:textSize="12sp"
                    android:elevation="1dp"
                    app:cornerRadius="8dp" />
            </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTimeSlots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:paddingHorizontal="18dp"
            tools:listitem="@layout/item_time_slot"/>

        <!-- Confirm Button -->
        <ImageButton
            android:id="@+id/btnConfirmBooking"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/next_btn"
            android:layout_gravity="end"
            android:visibility="visible"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
