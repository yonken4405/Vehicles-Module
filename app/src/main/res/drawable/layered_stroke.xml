<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer layer with yellow stroke -->
    <!-- Stroke outline layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="2dp" android:color="@color/colorPrimaryYellow" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Inner yellow background layer with padding to create a gap from stroke -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="6dp" />
        </shape>
    </item>
</layer-list>