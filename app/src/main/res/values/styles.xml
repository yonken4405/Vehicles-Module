<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="TextInputLayoutColors" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimaryYellow</item>
        <item name="hintTextColor">@color/yellowFont</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxBackgroundColor">@color/white</item>

    </style>


    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="cornerRadius">20dp</item>
        <item name="queryHint">Search Branches</item>
        <item name="iconifiedByDefault">false</item>
        <item name="android:textColorHint">@color/lighterFont</item>
        <item name="android:textColor">@color/primaryFont</item>
        <item name="android:background">@drawable/searchview_background</item>
        <item name="queryBackground">@null</item>
        <item name="iconTint">@null</item>
    </style>



</resources>